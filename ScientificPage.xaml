<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project1.ScientificPage">

    <Grid Padding="14" RowSpacing="4" ColumnSpacing="4"
          RowDefinitions="*,*,*,*,*,*"
          ColumnDefinitions="*,*,*,*,*" BackgroundColor="{DynamicResource NavigationBarColor}">

        <Label x:Name="Batch1_Process"
               FontSize="22"
               LineBreakMode="NoWrap"
               Grid.ColumnSpan="5"
               Text=""
               HorizontalTextAlignment="End"
               VerticalTextAlignment="Start"
               Grid.Row="0"
               Style="{StaticResource LargeLabelStyle}"/>

        <Label x:Name="EndText"
               FontSize="64" FontAttributes="Bold" Text="0"
               HorizontalTextAlignment="End"
               VerticalTextAlignment="End"
               LineBreakMode="NoWrap" Grid.ColumnSpan="5" 
               Style="{StaticResource LargeLabelStyle}"/>

        <BoxView  Color="{DynamicResource TertiaryTextColor}" HeightRequest="1"
                 Grid.Row="0" VerticalOptions="End"
                 Grid.ColumnSpan="5"
                 />

        <Button Text="C" Grid.Row="5" Grid.Column="3"
               Clicked="TextClear" Style="{StaticResource ButtonStyle}" BackgroundColor="{DynamicResource EqualToColor}"/>
        <Button Text="%" Grid.Row="5" Grid.Column="2"
               Clicked="Percentage" Style="{StaticResource ButtonStyle}"/>

        <Button Text="1" Grid.Row="1" Grid.Column="0"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="2" Grid.Row="1" Grid.Column="1"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="3" Grid.Row="1" Grid.Column="2"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>

        <Button Text="4" Grid.Row="2" Grid.Column="0"
              Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="5" Grid.Row="2" Grid.Column="1"
              Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="6" Grid.Row="2" Grid.Column="2"
              Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>

        <Button Text="7" Grid.Row="3" Grid.Column="0"
              Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="8" Grid.Row="3" Grid.Column="1"
              Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="9" Grid.Row="3" Grid.Column="2"
              Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>

        <Button Text="0" Grid.Row="4" Grid.Column="1" 
              Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="." Grid.Row="4" Grid.Column="2" 
              Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>

        <Button Text="/" Grid.Row="1" Grid.Column="3"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="*" Grid.Row="2" Grid.Column="3"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="-" Grid.Row="3" Grid.Column="3"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text="+" Grid.Row="4" Grid.Column="3"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>



        <Button Text="=" Grid.Row="5" Grid.Column="4" 
               Clicked="ReturnKey" Style="{StaticResource ButtonStyle}"/>

        <Button Text="âˆš	" Grid.Row="1" Grid.Column="4"
            Clicked="SqrRoot" Style="{StaticResource ButtonStyle}"/>
        <Button Text="mod" Grid.Row="2" Grid.Column="4"
             Clicked="Mod"  Style="{StaticResource ButtonStyle}"/>
        <Button Text="(" Grid.Row="3" Grid.Column="4"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        <Button Text=")" Grid.Row="4" Grid.Column="4"
               Clicked="Clickable" Style="{StaticResource ButtonStyle}"/>
        
        <Button Text="" Grid.Row="4" Grid.Column="0" 
                Style="{StaticResource ButtonStyle}"/>
        <Button Text="" Grid.Row="5" Grid.Column="0" 
                Style="{StaticResource ButtonStyle}"/>
        <Button Text="" Grid.Row="5" Grid.Column="1" 
                Style="{StaticResource ButtonStyle}"/>

    </Grid>
</ContentPage>